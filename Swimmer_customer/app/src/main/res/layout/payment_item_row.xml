<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/paymentItemImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center|top"
        android:layout_marginRight="12dp"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:adjustViewBounds="true"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/paymentItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="상품명"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/paymentItemSize"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선택 옵션 :"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/paymentItemColor"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선택 옵션 :" />

        <TextView
            android:id="@+id/paymentItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가격 :" />

        <TextView
            android:id="@+id/paymentItemQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="총 주문 갯수 :" />
    </LinearLayout>
</LinearLayout>